<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:scrollbars="none"
    android:background="@mipmap/ll">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:id="@+id/text_name"
        android:layout_weight="1"
        android:textSize="20dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文名："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:id="@+id/text_engName"
        android:layout_weight="1"
        android:textSize="20dp"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性格：："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/text_character"
            android:layout_weight="1"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国籍："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/text_nation"
            android:layout_weight="1"
            android:textSize="20dp"

            />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="易患病："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/easyOfDisease"
            android:textSize="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寿命："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/life"
            android:textSize="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/des"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特征："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feature"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性格特征："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterFeature"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饮食习性："
            android:textColor="#fa28ec"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedPoints"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喂养要点："
            android:textColor="#fa28ec"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/careKnowledge"
            android:textSize="20dp"
            />

</LinearLayout>

</ScrollView>